<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Compare Workouts</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Compare Workouts</h1>
        <div class="workout-comparison">
            <% workouts.forEach(workout => { %>
                <div class="workout-details">
                    <h2><%= workout.name %></h2>
                    <p>Distance: <%= (workout.distance / 1000).toFixed(2) %> km</p>
                    <p>Moving Time: <%= (workout.moving_time / 60).toFixed(2) %> mins</p>
                    <p>Date: <%= new Date(workout.start_date).toLocaleDateString() %></p>
                    <p>Shoes: <%= workout.gear ? workout.gear.name : 'Unknown' %></p>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
